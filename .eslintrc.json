{
	"root": true,
	"extends": [
		"wikimedia/common",
		"wikimedia/node",
		"wikimedia/language/es2022",
		"wikimedia/jsduck"
	],
	"rules": {
		"no-unused-vars": "error",
		"max-len": "off",
		"yml/no-empty-mapping-value": "warn",
		"n/no-process-exit": "warn",
		"no-mixed-spaces-and-tabs": "warn",
		"implicit-arrow-linebreak": "warn",
		"n/no-unsupported-features/node-builtins": "warn"
	},
	"overrides": [
		{
			"files": [
				"scripts/template-mapping.js",
				"test/utils/server.js"
			],
			"rules": {
				"camelcase": "off",
				"n/no-process-exit": "off"
			}
		}
	],
	"globals": {
		"fetch": true
	}
}
