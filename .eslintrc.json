{
	"root": true,
	"extends": [
		"wikimedia/server",
		"wikimedia/jsduck"
	],
	"rules": {
		"max-len": "off",
		"yml/no-empty-mapping-value": "warn",
		"es-x/no-hashbang": "warn",
		"n/no-process-exit": "warn"
	},
	"overrides": [
		{
			"files": [
				"scripts/template-mapping.js"
			],
			"rules": {
				"camelcase": [
					"off"
				]
			}
		}
	],
	"globals": {
		"fetch": true
	}
}
